<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
            <style>
                .sidebar {
                    min-height: 100vh;
                    background-color: #4e73df;
                }
                .sidebar .nav-link {
                    color: rgba(255, 255, 255, 0.8);
                }
                .sidebar .nav-link:hover {
                    color: #fff;
                }
                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: rgba(255, 255, 255, 0.1);
                }
                .content {
                    min-height: 100vh;
                }
                .border-left-primary {
                    border-left: 0.25rem solid #4e73df !important;
                }
                .border-left-success {
                    border-left: 0.25rem solid #1cc88a !important;
                }
                .border-left-info {
                    border-left: 0.25rem solid #36b9cc !important;
                }
                .border-left-warning {
                    border-left: 0.25rem solid #f6c23e !important;
                }
            </style>
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-2 px-0 position-fixed sidebar">
                        <div class="py-4 px-3 mb-4">
                            <h5 class="text-white">CRM</h5>
                        </div>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get('_route') == 'app_dashboard' ? 'active' : '' }}" href="{{ path('app_dashboard') }}">
                                    <i class="fas fa-fw fa-tachometer-alt me-2"></i>
                                    Tableau de bord
                                </a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'app_user' ? 'active' : '' }}" href="{{ path('app_user_index') }}">
                                        <i class="fas fa-fw fa-user-cog me-2"></i>
                                        Gestion des utilisateurs
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'app_client' ? 'active' : '' }}" href="{{ path('app_client_index') }}">
                                        <i class="fas fa-fw fa-users me-2"></i>
                                        Gestion des clients
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'app_invoice' ? 'active' : '' }}" href="{{ path('app_invoice_index') }}">
                                        <i class="fas fa-fw fa-file-invoice me-2"></i>
                                        Gestion des factures
                                    </a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'app_client' ? 'active' : '' }}" href="{{ path('app_client_index') }}">
                                        <i class="fas fa-fw fa-users me-2"></i>
                                        Mes clients
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'app_invoice' ? 'active' : '' }}" href="{{ path('app_invoice_index') }}">
                                        <i class="fas fa-fw fa-file-invoice me-2"></i>
                                        Mes factures
                                    </a>
                                </li>
                            {% endif %}
                            <li class="nav-item mt-4">
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    <i class="fas fa-fw fa-sign-out-alt me-2"></i>
                                    Déconnexion
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-10 ms-auto content">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        {% else %}
            {% block body_no_layout %}{% endblock %}
        {% endif %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        {% endblock %}
    </body>
</html>
